{
  "manifest_version": 3,
  "name": "X Thread Extractor",
  "version": "1.0",
  "description": "Extract thread information from X (Twitter) posts",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "http://localhost:3000/*",
    "https://elongatd.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["config.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "use_dynamic_url": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "x-thread-extractor@example.com",
      "strict_min_version": "109.0"
    }
  }
}
